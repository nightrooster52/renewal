package  {	import flash.display.Sprite;	import flash.events.Event;	public class Rock extends Sprite{		private var _body:Sprite;		private var _main:Main;		var hitHead:Boolean = false;				public function Rock(body:Sprite, main:Main) {			this._body = body;			this._main = main;			addChild(body);			addEventListener(Event.ENTER_FRAME, update);			addEventListener(Event.REMOVED, stopStuff);		}		private function update(evt:Event):void{						if(hitTestObject(_main.snake.head)){				trace("snake hit");				trace(this.x);				trace(_main.snake.head.x + _main.xOffset);								//push teh snake back				var xKickBack:int = (_main.snake.head.x - _main.snake.nose.x)*4*Math.random();				var yKickBack:int = (_main.snake.head.y - _main.snake.nose.y)*4*Math.random();				_main.snake.nose.x += xKickBack;				_main.snake.nose.y += yKickBack;				_main.snake.head.x += xKickBack;				_main.snake.head.y += yKickBack;								hitHead = true;			}if(hitHead == true && !hitTestObject(_main.snake.head)){				_main.snakePause();				hitHead = false;			}						}			private function stopStuff(evt:Event):void{				trace("rock removed");				removeEventListener(Event.ENTER_FRAME, update);		}	}	}