package {		import flash.events.*	import flash.ui.Mouse;	import flash.geom.ColorTransform;	import fl.motion.Color;	import flash.filters.*;	import flash.display.Shape;	import flash.display.Sprite;			public class Main extends Sprite{				var snake:Snake;				var xOffset:int;		var yOffset:int;		var speed:uint = 20;		var scene:Sprite = new Sprite();				public function Main() {			addEventListener(Event.ADDED_TO_STAGE, init);					}				private function init(evt:Event):void{			removeEventListener(Event.ADDED_TO_STAGE, init);						addEventListener(Event.ENTER_FRAME, update);			this.snake = new Snake();			//for testing purposes			scene.graphics.beginFill(0x000000, 1);			scene.graphics.drawRect(0, 0, 500, 500);						addChild(scene);			scene.addChild(snake);											}				private function update(evt:Event):void{			updateMovement();		}				private function updateMovement():void{						//motion between 0-1, proportionate to distance from center of screen			var xMotion:Number = (CONSTANTS.STAGEWIDTH/2 - stage.mouseX)/(CONSTANTS.STAGEWIDTH/2); 			var yMotion:Number = (CONSTANTS.STAGEHEIGHT/2 - stage.mouseY)/(CONSTANTS.STAGEHEIGHT/2);															xOffset += xMotion*speed;			yOffset += yMotion*speed;						scene.x = xOffset;			scene.y = yOffset;			var snakeXgoal:int = -xOffset + stage.mouseX;			var snakeYgoal:int = -yOffset + stage.mouseY;						snake.nose.x += (snakeXgoal - snake.nose.x)/7;			snake.nose.y += (snakeYgoal - snake.nose.y)/7;					}	}	}