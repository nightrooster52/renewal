package {	import flash.display.Sprite;	import flash.events.Event;	import flash.geom.Point;	public class Tail extends Sprite {		var point1:Point = new Point(-50, 0);		var point2:Point = new Point(50, 0);		var point3:Point = new Point(0, 100);		public function Tail() {			// constructor code			addEventListener(Event.ADDED, init);		}		private function init(evt:Event):void {			removeEventListener(Event.ADDED, init);						graphics.beginFill(CONSTANTS.GREEN, 1);			graphics.moveTo(point1.x, point1.y);			graphics.lineTo(point2.x, point2.y);			graphics.lineTo(point3.x, point3.y);			graphics.lineTo(point1.x, point1.y);		}	}}