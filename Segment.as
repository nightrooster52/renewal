package  {	import flash.display.Sprite;	import flash.events.*		public class Segment extends Sprite{		var size:uint;		public function Segment() {			size = 100;			addEventListener(Event.ADDED, init);		}				private function init(evt:Event):void{			removeEventListener(Event.ADDED, init);			graphics.beginFill(CONSTANTS.GREEN, 1);			graphics.drawRect(-size/2, 0, size, 1);		}			}	}